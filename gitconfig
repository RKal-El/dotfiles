[alias]
        cat=-p cat-file -p
        branche=branch
        branch=branch
        co=checkout
        st=status
        undo=reset HEAD~1
        orel=checkout orel --
        master=checkout master --
        mcms=checkout mcms --
        teaser=checkout teaser --
        flash=checkout flash --
        local=checkout local --
        nfs=checkout nfs --
        prod=checkout mcms/2.7.1-final
        tempo=commit -a -m tempo
        kprod=!gitk  mcms/3.0 origin/mcms/3.0 ^origin/mcms/3.0~200 --&
        kdev=!gitk local master origin/master ^master~200 --&
        willpush=log origin/master..master
        pushnfs = push origin refs/heads/nfs:refs/heads/master
        pushlocal = push origin refs/heads/local:refs/heads/master
        pushprodlocal = push origin refs/heads/prodlocal:refs/heads/mcms/3.1/master
        push3 = push origin refs/heads/mcms/3.0:refs/heads/mcms/3.0
	squash=commit -s --amend -C HEAD
	amend=commit -s --amend
        post-review=send-email --no-chain-reply-to --suppress-cc all --suppress-from --no-signed-off-by-cc --annotate --compose --to corp.software.review@news.intersec.com -C -C -M
